    script(defer='defer', src='//cdn.metatavu.io/libs/jquery/3.2.1/jquery.min.js',type='text/javascript')
    script(defer='defer', src='//cdn.metatavu.io/libs/popper.js/1.11.0/popper.min.js',type='text/javascript')
