    button.btn.btn-info.scroll-up-btn
      i.fa.fa-caret-up
    .jumbotron
      .container
        .row
          .col-sm-9
            h1.site-title Päätöshaku
              i.fa.fa-search.title-icon
            p.site-subtitle
              | Helsinki - Espoo - Vantaa - Tampere - Oulu
          .col-sm
            img.eu-logo(src='/gfx/paatoshaku_eulogot_header.jpg')
    block body
  footer.footer
    .container
      .row
        .col
          .row
            .col
              a.github-link(href='https://github.com/6aika/paatos-ui')
                  i.fa.fa-github
                  span.github-link-text  github.com/6aika/paatos-ui
        .col-1
          a.mt-link(href='https://www.metatavu.fi', target='_blank')
            img(src='/gfx/mt-logo.png')
        .col-5
